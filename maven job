pipeline{
    agent any
    stages{
        stage('Git clone'){
            steps{
                git 'https://github.com/mallsubhrakanta/HelloWorld-Springboot-App.git'
            }
        }
        
        stage('maven test'){
            steps{
                sh 'mvn testing'
            }
        }
        stage('maven build'){
            steps{
                sh 'mvn package'
            }
        }
        stage('maven deploy'){
            steps{
                sh 'mvn deploying'
            }
        }
    }
}
